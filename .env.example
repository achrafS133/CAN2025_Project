# ==================================================
# CAN 2025 GUARDIAN - ENVIRONMENT CONFIGURATION
# ==================================================

# ===================
# AI MODEL CONFIGURATION
# ===================

# OpenAI API Key (for GPT-3.5 Turbo)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google API Key (for Gemini Pro)
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Anthropic API Key (for Claude)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===================
# ALERT INTEGRATIONS
# ===================

# Twilio Configuration (SMS Alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here
RECIPIENT_PHONE_NUMBER=+1234567890

# Slack Integration
# Get webhook from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Discord Integration
# Get webhook from: Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# WhatsApp Business API (Optional)
WHATSAPP_API_KEY=your_whatsapp_api_key_here

# ===================
# DATABASE CONFIGURATION
# ===================

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=can2025
MYSQL_PORT=3306

# ===================
# APPLICATION SETTINGS
# ===================

# Debug Mode (true/false)
DEBUG_MODE=false

# Enable Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Enable Audit Logging
ENABLE_AUDIT_LOGGING=true

# ===================
# RATE LIMITING
# ===================

# Max requests per minute
MAX_REQUESTS_PER_MINUTE=60

# Max requests per hour
MAX_REQUESTS_PER_HOUR=1000

# Max requests per day
MAX_REQUESTS_PER_DAY=10000

# ===================
# COST TRACKING
# ===================

# Daily budget in USD
DAILY_BUDGET_USD=50.0

# Alert threshold (percentage)
ALERT_THRESHOLD_PERCENT=80

# Enable auto-downgrade to save costs
ENABLE_AUTO_DOWNGRADE=true

# ===================
# SECURITY SETTINGS
# ===================

# Confidence threshold for threat detection (0.0 - 1.0)
CONFIDENCE_THRESHOLD=0.5

# Enable face blurring for GDPR compliance
ENABLE_FACE_BLURRING=true

# Enable object tracking
ENABLE_OBJECT_TRACKING=true

# Enable zone-based detection
ENABLE_ZONE_DETECTION=true

# ===================
# VIDEO STREAM SETTINGS
# ===================

# Max concurrent video streams
MAX_CONCURRENT_STREAMS=4

# Processing FPS
PROCESSING_FPS=10

# Enable RTSP support
ENABLE_RTSP=true

# Enable RTMP support
ENABLE_RTMP=true

# ===================
# ANALYTICS SETTINGS
# ===================

# Enable historical analytics
ENABLE_HISTORICAL_ANALYTICS=true

# Enable anomaly detection
ENABLE_ANOMALY_DETECTION=true

# Enable predictive insights
ENABLE_PREDICTIVE_INSIGHTS=true

# Enable automated reports
ENABLE_AUTOMATED_REPORTS=false

# Report schedule (daily, weekly, monthly)
REPORT_SCHEDULE=daily

# Report email address
REPORT_EMAIL=your_email@example.com

